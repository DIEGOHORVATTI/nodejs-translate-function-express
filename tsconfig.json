{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["types/*"]
}
